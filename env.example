# Price of Juice Admin System - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED ENVIRONMENT VARIABLES (Backend)
# ============================================================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/priceofjuice

# JWT Secret Key (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Credentials
ADM_LOGIN=admin
ADM_PSSWRD=Biocore123&

# ============================================================================
# OPTIONAL ENVIRONMENT VARIABLES (Frontend)
# ============================================================================

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/admin
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# JWT Configuration
REACT_APP_JWT_STORAGE_KEY=adminToken
REACT_APP_JWT_HEADER_PREFIX=Bearer 
REACT_APP_JWT_EXPIRY_HOURS=24
REACT_APP_JWT_REFRESH_THRESHOLD=1

# Database Configuration
REACT_APP_MONGODB_URI=mongodb://localhost:27017/priceofjuice
REACT_APP_PRODUCTS_COLLECTION=products
REACT_APP_TEXT_COLLECTION=text

# Admin Credentials (Frontend - for development only)
REACT_APP_ADM_LOGIN=admin
REACT_APP_ADM_PSSWRD=Biocore123&

# Security Configuration
REACT_APP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_CONSOLE_LOG=true
REACT_APP_ENABLE_FILE_LOG=false
REACT_APP_LOG_FILE=admin-system.log
REACT_APP_MAX_LOG_FILE_SIZE=10485760
REACT_APP_MAX_LOG_FILES=5

# Feature Flags
REACT_APP_ENABLE_PRODUCT_MANAGEMENT=true
REACT_APP_ENABLE_TEXT_MANAGEMENT=true
REACT_APP_ENABLE_USER_MANAGEMENT=false
REACT_APP_ENABLE_AUDIT_LOG=true
REACT_APP_ENABLE_REALTIME_UPDATES=false

# UI Configuration
REACT_APP_UI_THEME=light
REACT_APP_UI_LANGUAGE=en
REACT_APP_UI_TIMEZONE=UTC
REACT_APP_UI_DATE_FORMAT=YYYY-MM-DD
REACT_APP_UI_TIME_FORMAT=HH:mm:ss
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# Validation Rules
REACT_APP_PRODUCT_ROW_MIN=1
REACT_APP_PRODUCT_ROW_MAX=1000
REACT_APP_PRODUCT_PRICE_MIN=0
REACT_APP_PRODUCT_PRICE_MAX=999999.99
REACT_APP_PRODUCT_STRING_MIN_LENGTH=1
REACT_APP_PRODUCT_STRING_MAX_LENGTH=500
REACT_APP_TEXT_MIN_LENGTH=0
REACT_APP_TEXT_MAX_LENGTH=10000
REACT_APP_CREDENTIALS_MIN_LENGTH=1
REACT_APP_CREDENTIALS_MAX_LENGTH=100

# Error Handling
REACT_APP_MAX_ERROR_RETRIES=3
REACT_APP_ERROR_NOTIFICATION_TIMEOUT=5000

# Performance Configuration
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_TTL=300000
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_VIRTUAL_SCROLLING=false
REACT_APP_DEBOUNCE_DELAY=300

# ============================================================================
# DEVELOPMENT SPECIFIC VARIABLES
# ============================================================================

# Set to 'development' for development mode
NODE_ENV=development

# Enable React DevTools
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable Hot Reload
FAST_REFRESH=true

# ============================================================================
# PRODUCTION SPECIFIC VARIABLES
# ============================================================================

# Set to 'production' for production mode
# NODE_ENV=production

# Production API URL (change this to your production API)
# REACT_APP_API_BASE_URL=https://your-production-api.com/admin

# Production MongoDB URI (change this to your production database)
# REACT_APP_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/priceofjuice

# Disable debug features in production
# REACT_APP_LOG_LEVEL=warn
# REACT_APP_ENABLE_CONSOLE_LOG=false
# REACT_APP_ENABLE_AUDIT_LOG=false

# ============================================================================
# TESTING SPECIFIC VARIABLES
# ============================================================================

# Set to 'test' for testing mode
# NODE_ENV=test

# Test API URL
# REACT_APP_API_BASE_URL=http://localhost:3000/admin

# Test MongoDB URI
# REACT_APP_MONGODB_URI=mongodb://localhost:27017/priceofjuice_test

# ============================================================================
# NOTES
# ============================================================================

# 1. Backend variables (MONGODB_URI, JWT_SECRET, ADM_LOGIN, ADM_PSSWRD) 
#    are used by your NestJS backend server
#
# 2. Frontend variables (REACT_APP_*) are used by your React application
#
# 3. Never commit the actual .env file to version control
#    Only commit .env.example as a template
#
# 4. In production, use strong, unique values for:
#    - JWT_SECRET
#    - Database credentials
#    - Admin credentials
#
# 5. The REACT_APP_ prefix is required for Create React App to expose
#    environment variables to the browser
#
# 6. For security, sensitive variables should be set on the server
#    and not exposed to the client
